<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-info">
                <%= link_to 'Назад', library_subscriber_path(@library,@subscriber), class:'pull-right btn btn-primary btn-xs' %>
                <h4 class="m-b-0 text-white">Редактировать читателя</h4>
            </div>
            <div class="card-body">
                <%= form_for ([@library, @subscriber]) do |f| %>
                  <div class="form-body">
                    <h3 class="card-title">Читатель <%= @subscriber.fname%> <%= @subscriber.sname%></h3>
                    <hr>
                  </div>
                  <% if @subscriber.errors.any? %>   
                    <div class="alert alert-warning">
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
                      <h3 class="text-warning"><i class="fa fa-exclamation-triangle"></i> <%= t('validate_errors.error', count: @subscriber.errors.count)%></h3> <% @subscriber.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                    </div>     
                  <% end %>
                  <div class="row p-t-20">
                    <div class="col-md-12">
                        <div class="form-group">
                            <%= f.label :number, class: 'control-label' %> <span class="text-danger">*</span>
                            <%= f.text_field :number, class: 'form-control', placeholder: "0000000" %>
                            <small class="form-control-feedback"> Введите номер билета читателя </small>
                        </div>
                    </div>
                  </div>
                  <div class="row p-t-20">
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= f.label :fname, class: 'control-label' %> <span class="text-danger">*</span>
                            <%= f.text_field :fname, class: 'form-control', placeholder: "Иван" %>
                            <small class="form-control-feedback"> Введите Имя читателя </small>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= f.label :sname, class: 'control-label' %> <span class="text-danger">*</span>
                            <%= f.text_field :sname, class: 'form-control', placeholder: "Иванов" %>
                            <small class="form-control-feedback"> Введите Фамилию читателя </small>
                        </div>
                    </div>
                    <!--/span-->
                  </div>
                  <!--/row-->
                  <div class="row">
                      <div class="col-md-6">
                          <div class="form-group">
                            <%= f.label :mname, class: 'control-label' %>
                            <%= f.text_field :mname, class: 'form-control', placeholder: "Иванов" %>
                            <small class="form-control-feedback"> Введите Отчество читателя </small>
                        </div>
                      </div>
                      <!--/span-->
                      <div class="col-md-6">
                          <div class="form-group">
                              <%= f.label :phone, class: 'control-label' %> <span class="text-danger">*</span>
                              <%= f.phone_field :phone, class: 'form-control', placeholder: "7ХХХХХХХХХХ" %>
                              <small class="form-control-feedback"> Введите Телефон читателя в формате 7ХХХХХХХХХХ</small>
                          </div>
                      </div>
                      <!--/span-->
                  </div>
                  <!--/row-->
                  <div class="row">
                      <div class="col-md-12">
                          <div class="form-group">
                              <%= f.label :address, class: 'control-label' %> <span class="text-danger">*</span>
                              <%= f.text_field :address, class: 'form-control', placeholder: "Индекс, Регион, Город, Адрес" %>
                              <small class="form-control-feedback"> Введите Адрес читателя</small>
                          </div>
                      </div>
                  </div>
                  
                  <div class="form-actions">
                    <%= link_to 'Назад', library_subscriber_path(@library,@subscriber), class:'btn btn-primary' %>
                    <%= f.submit 'Сохранить',class: "pull-right btn btn-success" %>
                  </div>
                <% end %>
            </div>
        </div>
    </div>
</div>