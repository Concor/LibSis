
<div class="row">
    <!-- Column -->
    <div class="col-lg-4 col-xlg-3 col-md-5">
        <div class="card">
            <div class="card-body">
                <center class="m-t-30"> <%= image_tag(@worker.avatar_url, class:"", style:"width: 150px;") if @worker.avatar? %>
                    <h4 class="card-title m-t-10"><%= @worker.fname+' '+@worker.sname%></h4>
                            <h6 class="card-subtitle"><%= @worker.post+' в '+@library.name%></h6>
                </center>
            </div>
            <hr>
            <div>
                <center class="m-b-20">
                  <%= link_to '', [@worker.library, @worker], class: "btn btn-outline-danger ti-trash",
                    method: :delete,
                    data: { confirm: 'Вы уверены, что хотите удалить сотрудника: "'+@worker.fname+' '+@worker.sname+'"?', pack: 'default' } %>
                </center>
            </div>
            
        </div>
    </div>
    <!-- Column -->
    <!-- Column -->
    <div class="col-lg-8 col-xlg-9 col-md-7">
        <div class="card">
            <div class="card-body">
                <%= form_for ([@library, @worker]), {:multipart => true} do |f| %>
                  <% if @worker.errors.any? %>   
                    <div class="alert alert-warning">
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
                      <h3 class="text-warning"><i class="fa fa-exclamation-triangle"></i> <%= t('validate_errors.error', count: @worker.errors.count)%></h3> <% @worker.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                    </div>     
                  <% end %>
                  <div class="row p-t-20">
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= f.label :fname, class: 'control-label' %> <span class="text-danger">*</span>
                            <%= f.text_field :fname, class: 'form-control', placeholder: "Иван" %>
                            <small class="form-control-feedback"> Введите Имя сотрудника </small>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= f.label :sname, class: 'control-label' %> <span class="text-danger">*</span>
                            <%= f.text_field :sname, class: 'form-control', placeholder: "Иванов" %>
                            <small class="form-control-feedback"> Введите Фамилию сотрудника </small>
                        </div>
                    </div>
                    <!--/span-->
                  </div>
                  <!--/row-->
                  <div class="row">
                      <div class="col-md-6">
                          <div class="form-group">
                            <%= f.label :mname, class: 'control-label' %>
                            <%= f.text_field :mname, class: 'form-control', placeholder: "Иванов" %>
                            <small class="form-control-feedback"> Введите Отчество сотрудника </small>
                        </div>
                      </div>
                      <!--/span-->
                      <div class="col-md-6">
                          <div class="form-group">
                              <%= f.label :birthday, class: 'control-label' %>
                              <%= f.date_field :birthday, class: 'form-control', placeholder: "дд.мм.гггг" %>
                              <small class="form-control-feedback"> Введите Дату рождения сотрудника в формате дд.мм.гггг</small>
                          </div>
                      </div>
                      <!--/span-->
                  </div>
                  <!--/row-->
                  <div class="row">
                      <div class="col-md-6">
                          <div class="form-group">
                              <%= f.label :start_date, class: 'control-label' %>
                              <%= f.date_field :start_date, class: 'form-control', placeholder: "дд.мм.гггг" %>
                              <small class="form-control-feedback"> Введите Дату начала работы сотрудника в формате дд.мм.гггг</small>
                          </div>
                      </div>
                      <!--/span-->
                      <div class="col-md-6">
                            <div class="form-group">
                              <%= f.label :education, class: 'control-label' %>
                              <%= f.text_field :education, class: 'form-control', placeholder: "Высшее архиваторское" %>
                              <small class="form-control-feedback"> Введите полученную сотрудником Специальность</small>
                          </div>
                      </div>
                      <!--/span-->
                  </div>
                  <div class="row">
                      <div class="col-md-6">
                          <div class="form-group">
                              <%= f.label :post , class: 'control-label' %> <span class="text-danger">*</span>
                              <%= f.text_field :post, class: 'form-control', placeholder: "Библиотекарь" %>
                              <small class="form-control-feedback"> Введите Должность сотрудника</small>
                          </div>
                      </div>
                      <div class="col-md-6">
                          <div class="form-group">
                            <%= f.label :avatar %>
                            <%= f.file_field :avatar, class: 'form-control' %>
                            <%= f.hidden_field :avatar_cache %>
                            <small class="form-control-feedback"> Прикрепите Фото сотрудника</small>
                          </div>
                      </div>
                  </div>
                  
                  <div class="form-actions">
                    <%= f.submit 'Сохранить',class: 'btn btn-success pull-right' %><%= link_to 'Назад к библиотеке', library_path(@library), class:'btn waves-effect waves-light btn-primary' %>
                  </div>
                <% end %>
            </div>    
        </div>
    </div>
    <!-- Column -->
</div>