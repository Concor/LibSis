<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-info">
                <%= link_to 'Назад', @library, class:'pull-right btn btn-primary btn-xs' %>
                <h4 class="m-b-0 text-white">Добавить нового сотрудника</h4>
            </div>
            <div class="card-body">
                <%= form_for ([@library, @library.workers.build]), {:multipart => true} do |f| %>
                  <div class="form-body">
                    <h3 class="card-title">Сотрудник</h3>
                    <hr>
                  </div>
                  <% if @worker.errors.any? %>   
                    <div class="alert alert-warning">
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
                      <h3 class="text-warning"><i class="fa fa-exclamation-triangle"></i> Вы допустили <%= t('validate_errors.error', count: @worker.errors.count)%>:</h3> <% @worker.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                    </div>     
                  <% end %>
                  <div class="row p-t-20">
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= f.label :fname, class: 'control-label' %> <span class="text-danger">*</span>
                            <%= f.text_field :fname, class: 'form-control', placeholder: "Иван" %>
                            <small class="form-control-feedback"> Введите Имя сотрудника </small>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= f.label :sname, class: 'control-label' %> <span class="text-danger">*</span>
                            <%= f.text_field :sname, class: 'form-control', placeholder: "Иванов" %>
                            <small class="form-control-feedback"> Введите Фамилию сотрудника </small>
                        </div>
                    </div>
                    <!--/span-->
                  </div>
                  <!--/row-->
                  <div class="row">
                      <div class="col-md-6">
                          <div class="form-group">
                            <%= f.label :mname, class: 'control-label' %>
                            <%= f.text_field :mname, class: 'form-control', placeholder: "Иванов" %>
                            <small class="form-control-feedback"> Введите Отчество сотрудника </small>
                        </div>
                      </div>
                      <!--/span-->
                      <div class="col-md-6">
                          <div class="form-group">
                              <%= f.label :birthday, class: 'control-label' %>
                              <%= f.date_field :birthday, class: 'form-control', placeholder: "дд.мм.гггг" %>
                              <small class="form-control-feedback"> Введите Дату рождения сотрудника в формате дд.мм.гггг</small>
                          </div>
                      </div>
                      <!--/span-->
                  </div>
                  <!--/row-->
                  <div class="row">
                      <div class="col-md-6">
                          <div class="form-group">
                              <%= f.label :start_date, class: 'control-label' %>
                              <%= f.date_field :start_date, class: 'form-control', placeholder: "дд.мм.гггг" %>
                              <small class="form-control-feedback"> Введите Дату начала работы сотрудника в формате дд.мм.гггг</small>
                          </div>
                      </div>
                      <!--/span-->
                      <div class="col-md-6">
                            <div class="form-group">
                              <%= f.label :education, class: 'control-label' %>
                              <%= f.text_field :education, class: 'form-control', placeholder: "Высшее архиваторское" %>
                              <small class="form-control-feedback"> Введите полученную сотрудником Специальность</small>
                          </div>
                      </div>
                      <!--/span-->
                  </div>
                  <div class="row">
                      <div class="col-md-6">
                          <div class="form-group">
                              <%= f.label :post, class: 'control-label' %> <span class="text-danger">*</span>
                              <%= f.text_field :post, class: 'form-control', placeholder: "Библиотекарь" %>
                              <small class="form-control-feedback"> Введите Должность сотрудника</small>
                          </div>
                      </div>
                      <div class="col-md-6">
                          <div class="form-group">
                            <%= f.label :avatar %>
                            <%= image_tag(@worker.avatar_url, class:"img-responsive", style:"width: 200px;") if @worker.avatar? %>
                            <%= f.file_field :avatar, class: 'form-control' %>
                            <%= f.hidden_field :avatar_cache %>
                            <small class="form-control-feedback"> Прикрепите Фото сотрудника</small>
                          </div>
                      </div>
                  </div>
                  
                  <div class="form-actions">
                    <%= link_to 'Назад', @library, class:'btn btn-primary' %>
                    <%= f.submit 'Сохранить',class: "pull-right btn btn-success" %>
                  </div>
                <% end %>
            </div>
        </div>
    </div>
</div>