<div class="row">
  <% @libraries.each do |library| %>
    <!-- .col -->
    <div class="col-md-6 col-lg-6 col-xlg-4">
        <div class="card card-body">
            <div class="row">
                <div class="col-md-4 col-lg-3 text-center">
                    <%= link_to library_path(library) do %><img src="<%=library.avatar_url%>" alt="<%= library.name %>" class="img-circle img-responsive libraryavatar"><% end %>
                </div>
                <div class="col-md-8 col-lg-9">
                    <%= link_to library_path(library) do %><h3 class="box-title m-b-0"><%= library.name %></h3><% end %>
                    <p>
                        <%= library.number %> <%= library.address %>
                    </p>
                </div>
            </div>
        </div>
    </div>
  <% end %>
  <!-- .col -->
    <div class="col-md-6 col-lg-6 col-xlg-4">
        <div class="card card-body text-center">
            <%= link_to 'Добавить новую Бибилиотеку', new_library_path %>
        </div>
    </div>
</div>