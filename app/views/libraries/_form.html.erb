<%= form_for @library, {:multipart => true, :class => "form-horizontal"} do |f| %>
  <% if @library.errors.any? %>   
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
      <h3 class="text-warning"><i class="fa fa-exclamation-triangle"></i> <%= t('validate_errors.error', count: @library.errors.count)%></h3> <% @library.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
    </div>     
  <% end %>
 
  <div class="form-group">
    <%= f.label :number %> <span class="text-danger">*</span>
    <%= f.text_field :number, class: "form-control", placeholder: "Введите номер библиотеки" %>
  </div>
  <div class="form-group">
    <%= f.label :name %> <span class="text-danger">*</span>
    <%= f.text_area :name, class: "form-control", placeholder: "Введите название библиотеки" %>
  </div>
  <div class="form-group">
    <%= f.label :address %> <span class="text-danger">*</span>
    <%= f.text_area :address, size: "24х6", class: "form-control", placeholder: "Введите адрес библиотеки" %>
  </div>
  <div class="form-group">
    <%= f.label :avatar %> <span class="text-danger">*</span>
    <%= image_tag(@library.avatar_url, class:"img-responsive", style:"width: 200px;") if @library.avatar? %>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>
  <p>
    <%= f.submit 'Добавить', class: "btn btn-success" %>
  </p>
<% end %>