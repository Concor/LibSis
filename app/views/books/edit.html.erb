<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-info">
                <%= link_to 'Назад', library_book_path(@book.library,@book), class:'pull-right btn btn-primary btn-xs' %>
                <h4 class="m-b-0 text-white">Редактировать книгу <%=@book.name%></h4>
            </div>
            <div class="card-body">
                <%= form_for ([@book.library, @book]), {:multipart => true} do |f| %>
                    <% if @book.errors.any? %>   
                        <div class="alert alert-warning">
                          <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
                          <h3 class="text-warning"><i class="fa fa-exclamation-triangle"></i> <%= t('validate_errors.error', count: @book.errors.count)%></h3> <% @book.errors.full_messages.each do |msg| %>
                              <li><%= msg %></li>
                            <% end %>
                        </div>     
                      <% end %>
                  <div class="row p-t-20">
                    <div class="col-md-12">
                        <div class="form-group">
                            <%= f.label :name, class: 'control-label' %> <span class="text-danger">*</span> / <%= f.label :author, class: 'control-label' %>
                            <%= f.text_field :name, class: 'form-control', placeholder: "Название" %>
                            <small class="form-control-feedback"> Введите Название книги </small>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            
                            <%= f.text_field :author, class: 'form-control', placeholder: "Автор" %>
                            <small class="form-control-feedback"> Введите Авторов книги </small>
                        </div>
                    </div>
                  </div>
                  <div class="row p-t-20">
                    <div class="col-md-4">
                        <div class="form-group">
                            <%= f.label :cipher, class: 'control-label' %> <span class="text-danger">*</span>
                            <%= f.text_field :cipher, class: 'form-control', placeholder: "Шифр" %>
                            <small class="form-control-feedback"> Введите Шифр книги </small>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-4">
                        <div class="form-group">
                            <%= f.label :price, class: 'control-label' %>
                            <%= f.text_field :price, class: 'form-control', placeholder: "00.00" %>
                            <small class="form-control-feedback"> Введите Цену книги </small>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-4">
                        <div class="form-group">
                            <%= f.label :date, class: 'control-label' %>
                            <%= f.date_field :date, class: 'form-control', placeholder: "дд.мм.гггг" %>
                            <small class="form-control-feedback"> Введите Дату поступления книги в библиотеку </small>
                        </div>
                    </div>
                    <!--/span-->
                  </div>
                  <div class="row p-t-20">
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= f.label :publ, class: 'control-label' %>
                            <%= f.text_field :publ, class: 'form-control', placeholder: "Издательство" %>
                            <small class="form-control-feedback"> Введите Название издательства </small>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-6">
                        <div class="form-group">
                            <%= f.label :publ_y, class: 'control-label' %>
                            <%= f.number_field :publ_y, class: 'form-control', placeholder: "гггг", min: 1000, max: 2100, step: 1 %>
                            <small class="form-control-feedback"> Введите Год издания </small>
                        </div>
                    </div>
                    <!--/span-->
                  </div>
                  <!--/row-->
                  <div class="form-actions">
                    <%= f.submit 'Сохранить',class: "pull-right btn btn-success" %>
                    <%= link_to 'Назад', library_book_path(@book.library,@book), class:'btn btn-primary' %>
                  </div>
                <% end %>
            </div>
        </div>
    </div>
</div>