<%= form_for([@library, @library.books.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_area :name %>
  </p>
  <p>
    <%= f.label :author %><br>
    <%= f.text_area :author %>
  </p>
  <p>
    <%= f.label :cipher %><br>
    <%= f.text_field :cipher %>
  </p>
  <p>
    <%= f.label :publ %><br>
    <%= f.text_field :publ %>
  </p>
  <p>
    <%= f.label :publ_y %><br>
    <%= f.text_field :publ_y %>
  </p>
  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>